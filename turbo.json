{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^db:migrate", "^db:seed", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["^db:migrate", "^db:seed", "^build"],
      "cache": false
    },
    "watch": {
      "dependsOn": ["^db:migrate", "^db:seed"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "db:generate": {
      "inputs": ["src/**/*.ts", "prisma/schema.prisma"]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"]
    },
    "db:seed": {
      "dependsOn": ["db:migrate"],
      "inputs": ["src/**/*.ts", "prisma/schema.prisma"]
    },
    "clean": {}
  }
}
