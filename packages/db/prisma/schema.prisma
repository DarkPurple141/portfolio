// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
}

model Job {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  href        String?
  company     String  @unique
  start_date  Int
  end_date    Int?
}

model Qualification {
  id              Int    @id @default(autoincrement())
  course          String @unique
  provider        String
  graduation_year Int
  majors          String
}

model Social {
  id       Int    @id @default(autoincrement())
  url      String @unique
  username String
  name     String
  User     User   @relation(fields: [userId], references: [id])
  userId   Int
}

model User {
  id                        Int      @id @default(autoincrement())
  email                     String   @unique
  name                      String?
  phone                     String?
  socials                   Social[]
  shortDescription          String?
  shortDescription3rdPerson String?
  longDescription           String?
  longDescription3rdPerson  String?
}

model Post {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  content     String // Raw markdown content
  code        String // Bundled MDX code
  tags        Json     @default("[]")
  published   Boolean  @default(true)
  createdAt   DateTime
  updatedAt   DateTime
}
