generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Job {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  href        String?
  company     String  @unique
  start_date  Int
  end_date    Int?
}

model Qualification {
  id              Int    @id @default(autoincrement())
  course          String @unique
  provider        String
  graduation_year Int
  majors          String
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  shortDescription String?
  longDescription String?
}
